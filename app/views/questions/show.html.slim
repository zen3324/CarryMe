.container
  .col-md-12
    .row
      h1 = @question.title
      p = @question.body 
      
      hr
      h3 = t(:answers)
      = form_for [@question, @answer], class: 'form-group' do |f|
        = f.text_area :body, class: 'form-control'
        = f.submit t(:answer), class: 'btn btn-primary'

      = render @answers
