.container
  .col-md-12
    .row
      h1 = @question.title
      p = @question.body 
      
      hr
      h3 Comment
      = form_for [@question, @comment], class: 'form-group' do |f|
        = f.text_area :body, class: 'form-control'
        = f.submit 'Comment', class: 'btn btn-primary'

      = render @comments
